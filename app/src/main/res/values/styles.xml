<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="unitTextAppearance">
        <item name="android:color">@color/standardTextColor</item>
        <item name="android:textSize">@dimen/unitTextSize</item>
    </style>

    <style name="unitTextStyle">
        <item name="android:layout_margin">@dimen/standardMargin</item>
    </style>

</resources>
